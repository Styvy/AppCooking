<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.steve.navigationdrawer">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TP-Application-Cuisine"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".les_activity_secondaires.ListeDeCourse"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".les_activity_secondaires.MesRecettes"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".les_activity_secondaires.MesProvisions"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".les_activity_secondaires.CreerRecettes"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".les_activity_secondaires.BarcodeActivity" />
    </application>

</manifest>